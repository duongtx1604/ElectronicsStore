@model IEnumerable<ElectronicsStore.Models.Category>

<div id="top-header">
	<div class="container">
		<ul class="header-links pull-left">
			<li><a href="#"><i class="fa fa-phone"></i> +082-96-04-16</a></li>
			<li><a href="#"><i class="fa fa-envelope-o"></i> support@email.com</a></li>
			<li><a href="#"><i class="fa fa-map-marker"></i> 1734 산기대학로</a></li>
		</ul>
		<ul class="header-links pull-right">
			<!-- container@if (User.Identity.IsAuthenticated && User.IsInRole("Admin")) -->
			
			@if (User.Identity.IsAuthenticated)
			{
				<li><a href="/Products/Create"><i class="fa fa-user-o"></i> 산품 관리</a></li>
				<li><a href="/Users/Login"><i class="fa fa-user-o"></i> 마이베이지</a></li>
				<li><a href="/Users/Logout"><i class="fa fa-user-o"></i> 로그아웃</a></li>
			}
			else
			{
				<li><a href="/Users/Login"><i class="fa fa-user-o"></i> 로그인</a></li>
			}
		</ul>
	</div>
</div>
<div id="header">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- LOGO -->
			<div class="col-md-3">
				<div class="header-logo">
					<a href="#" class="logo">
						<img src="/img/logo.png" alt="">
					</a>
				</div>
			</div>
			<!-- /LOGO -->
			<!-- SEARCH BAR -->
			<div class="col-md-6">
				<div class="header-search">
					<form asp-controller="Products" asp-action="Index">
						<select name="catid" class="input-select">
							<option value="0">전체</option>

							@foreach (var item in Model) {
							<option value="@item.Id">@item.Name</option>
							}
						</select>
						<input class="input" name="keywords" placeholder="Search here">
						<button class="search-btn">Search</button>
					</form>
				</div>
			</div>
			<!-- /SEARCH BAR -->
			<!-- ACCOUNT -->
			<div class="col-md-3 clearfix">
				<div class="header-ctn">
					<!-- Wishlist -->
					<div>
						<a href="#">
							<i class="fa fa-heart-o"></i>
							<span>찜 리스트</span>
							<div class="qty">2</div>
						</a>
					</div>
					<!-- /Wishlist -->
					<!-- Cart -->
					<div class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
							<i class="fa fa-shopping-cart"></i>
							<span>장바구니</span>
							<div class="qty">3</div>
						</a>
						<div class="cart-dropdown">
							<div class="cart-list">
								<div class="product-widget">
									<div class="product-img">
										<img src="./img/product01.png" alt="">
									</div>
									<div class="product-body">
										<h3 class="product-name"><a href="#">product name goes here</a></h3>
										<h4 class="product-price"><span class="qty">1x</span>$980.00</h4>
									</div>
									<button class="delete"><i class="fa fa-close"></i></button>
								</div>

								<div class="product-widget">
									<div class="product-img">
										<img src="./img/product02.png" alt="">
									</div>
									<div class="product-body">
										<h3 class="product-name"><a href="#">product name goes here</a></h3>
										<h4 class="product-price"><span class="qty">3x</span>$980.00</h4>
									</div>
									<button class="delete"><i class="fa fa-close"></i></button>
								</div>
							</div>
							<div class="cart-summary">
								<small>3 Item(s) selected</small>
								<h5>SUBTOTAL: $2940.00</h5>
							</div>
							<div class="cart-btns">
								<a href="#">View Cart</a>
								<a href="#">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
							</div>
						</div>
					</div>
					<!-- /Cart -->
					<!-- Menu Toogle -->
					<div class="menu-toggle">
						<a href="#">
							<i class="fa fa-bars"></i>
							<span>Menu</span>
						</a>
					</div>
					<!-- /Menu Toogle -->
				</div>
			</div>
			<!-- /ACCOUNT -->
		</div>
		<!-- row -->
	</div>
	<!-- container -->
</div>